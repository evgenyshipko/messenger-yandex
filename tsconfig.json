{
  "compilerOptions": {
    "outDir": "static/js",
    "target": "es2019",
    "declaration": false,
    "module": "ESNext",
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "allowUmdGlobalAccess": true,
    "strict": true,
    "typeRoots" : ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    }
  },
    "include": ["src/*.ts"],
    "exclude": ["node_modules", "test"]

}
